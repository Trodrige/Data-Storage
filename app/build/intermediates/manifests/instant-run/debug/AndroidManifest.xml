<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kerick.group2_datastorage"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.kerick.group2_datastorage.DataStorageActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.kerick.group2_datastorage.PreferencesActivity" />
        <activity android:name="com.kerick.group2_datastorage.AboutActivity" />
        <activity android:name="com.kerick.group2_datastorage.InternalStorageActivity" />
        <activity android:name="com.kerick.group2_datastorage.ExternalStorageActivity" />
        <activity android:name="com.kerick.group2_datastorage.SavingStateActivity" />
    </application>

</manifest>